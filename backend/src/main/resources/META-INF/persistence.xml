<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <!-- JTA = container-managed transactions (the container handles begin/commit/rollback).
         Migration note: The original used PU name "com.javaone_customerserver_war_1.0-SNAPSHOTPU"
         (auto-generated by NetBeans). Simplified to "customerPU". -->
    <persistence-unit name="customerPU" transaction-type="JTA">
        <!-- Payara Micro's built-in H2 datasource (jdbc/__default) is used automatically
             when no jta-data-source is specified.
             Migration note: GlassFish used "jdbc/sample" (Derby), WildFly used
             "java:jboss/datasources/ExampleDS" (H2). -->

        <properties>
            <!-- drop-and-create: EclipseLink creates all tables on deploy, drops them on undeploy.
                 Perfect for demos. For production, use "none" + Flyway/Liquibase. -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <!-- Loads seed data (INSERT statements) after schema creation. -->
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/import.sql"/>
            <!-- EclipseLink logging: WARNING suppresses routine SQL output. Use FINE for debugging. -->
            <property name="eclipselink.logging.level" value="WARNING"/>
        </properties>
    </persistence-unit>
</persistence>
